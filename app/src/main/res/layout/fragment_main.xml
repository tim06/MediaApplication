<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/ffmpegBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ffmpeg"
        app:layout_constraintBottom_toTopOf="@+id/exoBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/exoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="exoPlayer"
        app:layout_constraintBottom_toTopOf="@+id/vlcBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ffmpegBtn" />

    <Button
        android:id="@+id/vlcBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vlcPlayer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exoBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>